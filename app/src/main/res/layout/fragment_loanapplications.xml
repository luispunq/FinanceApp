<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/normalbg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/jijengeappicon"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/loansapplicants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/floatingActionButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorCard" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/icn"
        android:clickable="true"
        android:focusable="auto"
        android:src="@drawable/ic_filter_list_black_24dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/floatingActionButton2"
        android:layout_below="@+id/icn"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/floatingActionButton2"
        android:gravity="center"
        android:text="Sort"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>