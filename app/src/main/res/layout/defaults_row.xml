<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/memberstat_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/mstatname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/celloutline"
                    android:padding="2dp"
                    android:text="memname"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mstatsav"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/celloutline"
                    android:padding="2dp"
                    android:text="loanamount"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mstatadv"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/celloutline"
                    android:padding="2dp"
                    android:text="lastpaid"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mstatloan"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/celloutline"
                    android:padding="2dp"
                    android:text="days"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mstatrisk"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/celloutline"
                    android:padding="2dp"
                    android:text="fees"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mstatrisk2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/celloutline"
                    android:padding="2dp"
                    android:text="officer"
                    android:textSize="16sp" />

            </TableRow>


        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>