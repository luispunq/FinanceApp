<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/normalbg"
    tools:context=".adminmenu2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCard">

            <ImageView
                android:id="@+id/icn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/jijengeappicon" />

            <EditText
                android:id="@+id/filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/title2"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="100dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/inputoutline"
                android:hint="Enter Name To Search"
                android:padding="5dp" />

            <LinearLayout
                android:id="@+id/hl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/filter"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <android.support.v7.widget.CardView
                    android:id="@+id/tab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Active"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/tab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="ALL"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/tab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Ratings"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:padding="2dp"
                android:text="CLIENTS"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/l1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:padding="2dp"
                android:text="MEMBERS"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/transparent">

                    <TextView
                        android:id="@+id/loanbalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_below="@+id/t1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:clickable="false"
                        android:padding="2dp"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/allmemsicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loanbalance"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorGreen"
                        android:src="@drawable/ic_people_black_24dp" />

                    <View
                        android:id="@+id/sep1"
                        android:layout_width="50dp"
                        android:layout_height="5dp"
                        android:layout_below="@+id/allmemsicon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorGreen" />

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:clickable="false"
                        android:padding="2dp"
                        android:text="ALL CLIENTS"
                        android:textSize="14sp"
                        android:textStyle="normal|bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@color/transparent">

                    <TextView
                        android:id="@+id/loaninstallment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_below="@+id/t2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:clickable="false"
                        android:padding="2dp"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/activememsicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loaninstallment"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorRed"
                        android:src="@drawable/ic_people_black_24dp" />


                    <View
                        android:id="@+id/sep"
                        android:layout_width="50dp"
                        android:layout_height="5dp"
                        android:layout_below="@+id/activememsicon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorRed" />

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:clickable="false"
                        android:padding="2dp"
                        android:text="ACTIVE MEMBERS"
                        android:textSize="14sp"
                        android:textStyle="normal|bold" />
                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/allmemberslist"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/hl1"
                android:layout_marginTop="10dp" />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/filter"
                android:layout_alignEnd="@+id/filter"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="false"
                android:layout_marginEnd="5dp"
                android:background="@color/colorAccent"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_filter_list_black_24dp"
                android:visibility="gone" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>